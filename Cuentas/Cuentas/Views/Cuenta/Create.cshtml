@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1 class="text-center">Crear Cuenta</h1>
<div class="row justify-content-center">
        <div class="col-md-6">
         <div class="card shadow-lg p-4 mb-4">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="numero" class="control-label"></label>
                        <input asp-for="numero" class="form-control" placeholder="Ingrese el número de cuenta" />
                        <span asp-validation-for="numero" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="descripcion" class="control-label"></label>
                        <input asp-for="descripcion" class="form-control" placeholder="Descripción breve" />
                        <span asp-validation-for="descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="creditos" class="control-label"></label>
                        <input asp-for="creditos" class="form-control" />
                        <span asp-validation-for="creditos" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="debitos" class="control-label"></label>
                        <input asp-for="debitos" class="form-control" />
                        <span asp-validation-for="debitos" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Crear Cuenta" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>

        </div> <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
