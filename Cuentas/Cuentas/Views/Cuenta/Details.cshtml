@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Detalles de Cuenta";
}



<div class="row justify-content-center">
    <div class="col-md-7">

        <div class="card shadow-lg">
            <div class="card-header bg-info text-white">
                <h4>Detalles de Cuenta</h4>
            </div>
            <div class="card-body">
                <dl class="row">

                    <dt>
                        @Html.DisplayNameFor(model => model.numero)
                    </dt>
                    <dd class="border-bottom">
                        @Html.DisplayFor(model => model.numero)
                    </dd>

                    <dt class="mt-2">
                        @Html.DisplayNameFor(model => model.descripcion)
                    </dt>
                    <dd class="border-bottom">
                        @Html.DisplayFor(model => model.descripcion)
                    </dd>

                    <dt class="mt-2">
                        @Html.DisplayNameFor(model => model.creditos)
                    </dt>
                    <dd class="border-bottom">
                        @Html.DisplayFor(model => model.creditos)
                    </dd>

                    <dt class="mt-2">
                        @Html.DisplayNameFor(model => model.debitos)
                    </dt>
                    <dd class="border-bottom">
                        @Html.DisplayFor(model => model.debitos)
                    </dd>

                    <dt class="mt-2">
                        @Html.DisplayNameFor(model => model.balance)
                    </dt>
                    <dd >
                        @Html.DisplayFor(model => model.balance)
                        
                    </dd>

                </dl>
            </div>

            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
            </div>

        </div>
    </div>
</div>