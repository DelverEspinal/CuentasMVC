@model IEnumerable<Cuentas.Models.Cuenta>

@{
    ViewData["Title"] = "Cuentas";
}

<h1 class="text-center">Bienvenido a Cuentas</h1>
<table class="table table-striped table-bordered table-hover border border-dark mt-5">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.creditos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.debitos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.balance)
            </th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.id)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creditos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.debitos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.balance)
            </td>
                <td >
                    <span class="@(item.balance < 0 ? "text-danger" : "text-success") fw-bold">
                                 @(item.balance < 0 ? "Inactivo" : "Activo")</span>
                    
                </td>
                
    
                <td class="w-25">

                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm @(item.balance < 0 ? "disabled" : "")">Editar</a>|

                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm" >Detalles</a> |

                    <a asp-action="Delete" asp-route-id="@item.id"class="btn btn-danger btn-sm" >Borrar</a>
                 </td>
        </tr>
            
        }
        
    </tbody>
</table>
<p class="text-end mt-4">
    <a asp-action="Create" class="btn btn-primary">Crear Cuenta</a>
</p>
